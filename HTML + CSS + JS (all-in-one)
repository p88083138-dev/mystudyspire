<body>

<header onclick="showHome()">MYSTUDYSPIRE</header>

<div id="home">
  <div class="graphic">
    <img src="https://i.ibb.co/3Wn3DqT/study-graphic.png" alt="Student Studying">
  </div>
  <div class="container">
    <div class="card" onclick="showSubjects('class6')">Class 6</div>
    <div class="card" onclick="showSubjects('class7')">Class 7</div>
    <div class="card" onclick="showSubjects('class8')">Class 8</div>
  </div>
</div>

<div id="subjects" class="hidden">
  <span class="back-btn" onclick="showHome()">⬅ Back to Classes</span>
  <div class="container" id="subjects-container"></div>
</div>

<div id="chapters" class="hidden">
  <span class="back-btn" onclick="backToSubjects()">⬅ Back to Subjects</span>
  <div class="container" id="chapters-container" style="flex-direction: column;"></div>
</div>

<script>
  const subjectsData = {
    class6: ["Math", "Science", "English", "Social Science"],
    class7: ["Math", "Science", "English", "Social Science"],
    class8: ["Math", "Science", "English", "Social Science"]
  };

  const chaptersData = {
    Math: ["Chapter 1: Knowing Our Numbers", "Chapter 2: Whole Numbers", "Chapter 3: Playing with Numbers"],
    Science: ["Chapter 1: Food", "Chapter 2: Components of Food", "Chapter 3: Fibre to Fabric"],
    English: ["Chapter 1: The Fun They Had", "Chapter 2: The Sound of Music", "Chapter 3: The Little Girl"],
    "Social Science": ["Chapter 1: History", "Chapter 2: Geography", "Chapter 3: Civics"]
  };

  function showHome() {
    document.getElementById('home').classList.remove('hidden');
    document.getElementById('subjects').classList.add('hidden');
    document.getElementById('chapters').classList.add('hidden');
  }

  function showSubjects(className) {
    const container = document.getElementById('subjects-container');
    container.innerHTML = '';
    subjectsData[className].forEach(subject => {
      const card = document.createElement('div');
      card.className = 'card';
      card.textContent = subject;
      card.onclick = () => showChapters(subject);
      container.appendChild(card);
    });
    document.getElementById('home').classList.add('hidden');
    document.getElementById('subjects').classList.remove('hidden');
    document.getElementById('chapters').classList.add('hidden');
  }

  function showChapters(subject) {
    const container = document.getElementById('chapters-container');
    container.innerHTML = '';
    chaptersData[subject].forEach((chapter, index) => {
      const div = document.createElement('div');
      div.className = 'chapter';
      div.innerHTML = `${chapter} <a href="pdfs/${subject}-chapter${index+1}.pdf" download>Download</a>`;
      container.appendChild(div);
    });
    document.getElementById('subjects').classList.add('hidden');
    document.getElementById('chapters').classList.remove('hidden');
  }

  function backToSubjects() {
    document.getElementById('subjects').classList.remove('hidden');
    document.getElementById('chapters').classList.add('hidden');
  }
</script>

</body>
</html>
